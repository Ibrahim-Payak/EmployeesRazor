@page
@model EmployeesRazor.Pages.Employees.IndexModel
@{
}
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Employee List</h2>
    </div>

    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-control text-white">Add Employee</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">

            @if (Model.vs.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="vs.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="vs.FirstOrDefault().Salary"></label>
                        </th>
                        <th>
                            <label asp-for="vs.FirstOrDefault().Post"></label>
                        </th>
                        <th></th>

                    </tr>
                    @foreach (var item in Model.vs)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(x=>item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(x=>item.Salary)
                            </td>
                            <td>
                                @Html.DisplayFor(x=>item.Post)
                            </td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger text-white btn-sm">Delete</button>
                                @*<button asp-page-handler="Index" asp-route-id="@item.Id" onclick="return conf"></button>*@
                            </td>

                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No records founds.</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <h2 class="text-info">OR</h2>
        <br />
    </div>

    <div class="container row">
        <table id="Data_Load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Post</th>
                    <th></th>
                </tr>

            </thead>
        </table>
    </div>


</div>