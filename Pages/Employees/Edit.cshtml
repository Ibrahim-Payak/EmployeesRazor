@page
@model EmployeesRazor.Pages.Employees.EditModel


<br />
<h2 class="text-info">Update Employee Details</h2>
<br />

<div class="container border col-10" style="padding:30px;" >
    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Employee.Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Employee.Name" />
            </div>
            <span class="text-danger" asp-validation-for="Employee.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Employee.Salary"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Employee.Salary" />
            </div>
            <span class="text-danger" asp-validation-for="Employee.Salary"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Employee.Post"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Employee.Post" />
            </div>
            <span class="text-danger" asp-validation-for="Employee.Post"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-2">
                 <input type="submit" value="Update" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
               
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>

</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
